#!/bin/bash

set -eu

if ! which brew; then
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

for brewPkg in \
    ack \
    blueutil \
    coreutils \
    ffmpeg \
    gh \
    git \
    go \
    jq \
    neovim \
    node \
    rlwrap \
    tig \
    tree \
    util-linux \
    $()
do
    brew list "${brewPkg}" > /dev/null || brew install "${brewPkg}"
done
