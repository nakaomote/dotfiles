#!/bin/bash

set -eu

cd "${HOME}"
if [[ ! -d ".git" ]]; then
    git init
    git remote add origin https://github.com/nakaomote/dotfiles
fi

if ! git branch | fgrep -x "* master"; then
    git fetch origin
    rm -f .zshrc .bashrc bash_logout .bash_profile .ideavimrc .config/kitty/kitty.conf
    git checkout -t origin/master
fi
